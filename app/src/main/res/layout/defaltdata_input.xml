<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:columnCount="2">

    <TextView
        android:text="@string/Car_model"
        style="@style/Defalt_data_name"
        />

    <EditText
        android:id="@+id/input_model"
        style="@style/Defalt_data_input"
        android:ems="10"
        android:hint="@string/Car_model"

        android:inputType="textCapCharacters"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <TextView
        style="@style/Defalt_data_name"
        android:text="@string/name_maker" />

    <EditText
        android:id="@+id/input_maker"
        style="@style/Defalt_data_input"
        android:ems="10"
        android:hint="@string/name_maker"
        android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
        android:inputType="textCapCharacters"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <TextView
        style="@style/Defalt_data_name"
        android:layout_marginBottom="15dp"
        android:text="배기량" />

    <EditText
        android:id="@+id/input_CC"
        android:ems="10"
        android:layout_marginBottom="15dp"
        android:hint="배기량 CC"
        android:maxLength="4"
        android:inputType="numberDecimal"
        android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
        style="@style/Defalt_data_input"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/c000000"
        android:layout_columnSpan="2"/>

    <TextView

        style="@style/Defalt_data_name"

        android:text="@string/ODD" />

    <EditText
        android:id="@+id/input_odd"
        style="@style/Defalt_data_input"

        android:ems="10"
        android:hint="@string/ODD"
        android:inputType="numberDecimal"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        style="@style/Defalt_data_name"
        android:layout_marginBottom="15dp"
        android:text="구동 타입" />

    <Spinner
        android:id="@+id/bike_type"
        style="@style/Defalt_data_input"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:entries="@array/bike_type"
        android:textAlignment="viewEnd"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/c000000"
        android:layout_columnSpan="2"/>
    <!--
    <EditText
        android:id="@+id/input_type"
        android:ems="10"
        android:hint="차량 타입"
        android:inputType="text"
        style="@style/Defalt_data_input"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
-->

    <TextView

        style="@style/Defalt_data_name"
        android:text="@string/gas_tank" />

    <EditText
        android:id="@+id/input_maxtankliter"
        android:ems="2"
        android:maxLength="2"
        android:hint="카탈로그상 최대 주유량"
        android:inputType="number"
        android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
        style="@style/Defalt_data_input"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView

        style="@style/Defalt_data_name"
        android:text="@string/gas_tank_max" />

    <EditText
        android:id="@+id/input_maxtankkan"
        android:ems="2"
        android:hint="계기판에 표기 되는 최대 칸"
        android:inputType="number"
        android:text="8"
        android:maxLength="2"
        style="@style/Defalt_data_input"
        android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <TextView

        style="@style/Defalt_data_name"
        android:text="@string/gas_tank_alrt" />

    <EditText
        android:id="@+id/input_alttankkan"
        style="@style/Defalt_data_input"
        android:ems="1"
        android:maxLength="1"
        android:text="2"
        android:hint="주유 경고등이 뜨는 칸수"
        android:inputType="number"
        android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
        tools:ignore="TouchTargetSizeCheck" />
    <TextView

        style="@style/Defalt_data_name"
        android:text="@string/gas_tank_alrtLiter" />

    <EditText
        android:id="@+id/input_alttankliter"
        style="@style/Defalt_data_input"
        android:ems="1"
        android:maxLength="1"
        android:hint="주유 경고등 리터"
        android:inputType="number"
        android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
        tools:ignore="TouchTargetSizeCheck" />
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/c000000"
        android:layout_columnSpan="2"/>
    <TextView
        style="@style/Defalt_data_name"
        android:layout_marginTop="10dp"
        android:text="@string/avg_Type" />

    <Spinner
        android:id="@+id/input_avgtype"
        style="@style/Defalt_data_input"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:entries="@array/avg_type"
        android:textAlignment="viewEnd"
        android:windowSoftInputMode="stateAlwaysHidden"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    <TextView
        style="@style/Defalt_data_name"
        android:text="@string/Gps_get" />

    <CheckBox
        android:id="@+id/gps_check"
        style="@style/Defalt_data_name"
        android:layout_gravity="center_horizontal"
        android:windowSoftInputMode="stateAlwaysHidden"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
    <TextView
        style="@style/Defalt_data_name"
        android:text="@string/opinet_get" />

    <CheckBox
        android:id="@+id/opnet_check"
        style="@style/Defalt_data_name"
        android:layout_gravity="center|center_horizontal"
        android:windowSoftInputMode="stateAlwaysHidden"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/c000000"
        android:layout_columnSpan="2"/>
    <TextView
        style="@style/Defalt_data_name"
        android:text="@string/picher_get" />

    <LinearLayout
        style="@style/Defalt_data_name"
        android:orientation="horizontal">

        <Button
            android:id="@+id/get_picture2"
            style="@style/Defalt_data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gar_get"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/get_picture"
            style="@style/Defalt_data_name"
            android:layout_weight="1"
            android:text="@string/camera_get"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
    </LinearLayout>

</GridLayout>