<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Ones_gas_avg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>


    </style>
    <style name="Defalt_data_name">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:autoSizeMinTextSize">16dp</item>
        <item name="android:autoSizeMaxTextSize">18dp</item>
        <item name="android:autoSizeStepGranularity">1dp</item>

    </style>
    <style name="Defalt_data_input">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>

        <item name="android:textStyle">bold</item>
        <item name="android:autoSizeMinTextSize">14dp</item>
        <item name="android:autoSizeMaxTextSize">17dp</item>
        <item name="android:autoSizeStepGranularity">1dp</item>
    </style>

    <style name="Head_textview">
        <item name="android:minWidth">200dp</item>
        <item name="android:maxWidth">350dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="oneavg_default">
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">5dp</item>
